#!/usr/bin/env node

var argv = require('optimist').argv;
var swap = require('../lib/core');
var init = require('../lib/init');

if (argv.init) {
    init(typeof argv.init == 'string' : argv.init ? process.cwd());
} else {
    swap.load(function() {
        argv._.forEach(function(arg) {
            var src = swap.processFile(arg);
            console.log("processed " + arg);
        });
    });
}

