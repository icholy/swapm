#!/usr/bin/env node

var argv   = require('optimist').argv;
var fs     = require('fs');
var swap   = require('../lib/core');
var common = require('../lib/common');

if (argv.init) {
  common.initialize(typeof argv.init == 'string' ? argv.init : process.cwd());
} else if (argv._.length == 0) {
  console.log("\n   Usage: swap [file] [file] ...\n");
} else {
  swap.load(null, function(err) {
    if (!err) {
      argv._.forEach(function(arg) {
        console.log("[+] READING :", arg);
        swap.processFile(arg, function(err, src) {
          if (!err) {
            if (src == null) {
              console.log("[-] NO CHANGES :", arg);
            } else {
              fs.writeFile(arg, src, function(err) {
                if (err) {
                  console.log("[-] ERROR : failed to write", arg);
                } else {
                  console.log("[+] WRITING :", arg);
                }
              });
            }
          } else {
            var errMsg = common.errorToString(err);
            console.log(errMsg);
          }
        });
      });
    } else {
      console.log(err);
      var errMsg = common.errorToString(err);
      console.log(errMsg);
    }
  });
}

